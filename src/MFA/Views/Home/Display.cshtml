@model MFA.Entities.ViewModels.DisplayViewModel
@{
    ViewData["Title"] = "Image Facial Recognition App";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div class="container">
    <div class="pull-right row" style="">
        <button id="emotion-button-trigger"> Emotional Analysis</button>
        <button id="facial-button-trigger"> Facial Analysis</button>
    </div>
    <div class="row">
        <div class="col-md-8" style="padding-left: 0px;  padding-right: 0px;">
            <img class="img-responsive" src="@Model.ImageUrl" alt="Uploaded Image" />
        </div>
        <div class="col-md-4 pull-right">
            <p id="textResults"></p>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#facial-button-trigger').click(function () {
                $.ajax({
                    type: 'GET',
                    url: 'api/facialAnalysisAsync?Uri=@Model.ImageUrl',

                    success: function (msg) {
                        PopulateResults(msg,"Face");
                    },
                    error: function (request, status, error) {
                        alert(error);
                    }
                });
                });

            $("#emotion-button-trigger").click(function () {
                $.ajax({
                    type: 'GET',
                    url: 'api/emotionalAnalysisAsync?Uri=@Model.ImageUrl',

                    success: function (msg) {
                        PopulateResults(msg,"Emotion");
                    },
                    error: function (request, status, error) {
                        alert(error);
                    }
            });
        });
        });

        function PopulateResults(value,callType) {
            $('#textResults').text(callType + " in image : " + value);
        }

    </script>
}